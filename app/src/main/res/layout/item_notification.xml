<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/notify_ProfilePic"
            android:layout_width="@dimen/_35hsdp"
            android:layout_height="@dimen/_35hsdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_16hsdp"
            android:layout_marginStart="@dimen/_7hsdp"
            android:src="@drawable/baseline_thumb_up_24"
            android:background="@drawable/circle_shape_bg"
            android:backgroundTint="@color/blue_theme"
            android:padding="@dimen/_6hsdp"
            />

        <TextView
            android:id="@+id/notify_User"
            android:layout_width="@dimen/_220hsdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10hsdp"
            android:layout_marginTop="@dimen/_16hsdp"
            android:text="Aniket mention you in a content accomodation pneumonoultramicr ovolcanosilicoKoniosis"
            android:textSize="@dimen/_15font_ssp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@id/notify_ProfilePic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_15hsdp"
            app:layout_constraintStart_toStartOf="@id/notify_User"
            app:layout_constraintTop_toBottomOf="@id/notify_User"
            android:text="Just now"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
