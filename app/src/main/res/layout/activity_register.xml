<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200hsdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_bg_img"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200hsdp"
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView"
            android:background="@color/login_shadow"
            />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To LamaDev"
            android:textColor="@color/white"
            android:textSize="@dimen/_32font_ssp"
            android:textStyle="bold"
            android:padding="@dimen/_15hsdp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="@id/imageView"
            />

        <TextView
            android:id="@+id/welcome_Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            android:textSize="@dimen/_15font_ssp"
            android:text="Connect with your friends and surrounding with LamaDev"
            android:layout_marginStart="@dimen/_20hsdp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20hsdp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/email"
                android:hint="Email"
                android:textColorHint="@color/white"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10hsdp"
                android:textSize="@dimen/_15font_ssp"
                android:layout_marginStart="@dimen/_20hsdp"
                android:layout_marginEnd="@dimen/_20hsdp"
                android:layout_marginBottom="@dimen/_12hsdp"
                android:background="@drawable/round_border_fill_shape"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/password"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10hsdp"
                android:textSize="@dimen/_15font_ssp"
                android:layout_marginStart="@dimen/_20hsdp"
                android:layout_marginEnd="@dimen/_20hsdp"
                android:layout_marginBottom="@dimen/_12hsdp"
                android:background="@drawable/round_border_fill_shape"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/passwordAgain"
                android:hint="Password Again"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10hsdp"
                android:textSize="@dimen/_15font_ssp"
                android:layout_marginStart="@dimen/_20hsdp"
                android:layout_marginEnd="@dimen/_20hsdp"
                android:layout_marginBottom="@dimen/_25hsdp"
                android:background="@drawable/round_border_fill_shape"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10hsdp"
                android:layout_marginStart="@dimen/_20hsdp"
                android:layout_marginEnd="@dimen/_20hsdp"
                android:backgroundTint="@color/blue_theme"
                android:textAllCaps="false"
                android:text="Signin"
                android:textSize="@dimen/_16font_ssp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/notHaveText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13hsdp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_40hsdp"
                android:text="Don't have an account?"
                />
            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_40hsdp"
                android:text="Login"
                android:textSize="@dimen/_13hsdp"
                android:layout_marginStart="@dimen/_1hsdp"
                android:textColor="@color/blue_theme"
                />

        </LinearLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45hsdp"
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_marginTop="@dimen/_150hsdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>