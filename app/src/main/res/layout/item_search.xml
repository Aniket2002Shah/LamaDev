<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_ProfilePic"
        android:layout_width="@dimen/_35hsdp"
        android:layout_height="@dimen/_35hsdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_16hsdp"
        android:layout_marginStart="@dimen/_7hsdp"
        android:src="@drawable/outline_person_outline_24"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="@dimen/_140hsdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10hsdp"
        android:layout_marginTop="@dimen/_16hsdp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Aniket Shah"
        android:textSize="@dimen/_19font_ssp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/search_ProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:text="Web Designer"
        android:textSize="@dimen/_12font_ssp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>