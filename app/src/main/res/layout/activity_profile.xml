<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_Activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/toolbar_bg"
                app:titleTextColor="@color/white"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
                android:popupTheme="@style/Theme.AppCompat.Light"
                />

            <ImageView
                android:id="@+id/cover_Pic"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150hsdp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toBottomOf="@id/toolbar_Activity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/profile_Pic"
                android:layout_width="@dimen/_50hsdp"
                android:layout_height="@dimen/_50hsdp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/cover_Pic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_50hsdp"
                app:layout_constraintBottom_toBottomOf="@id/cover_Pic"
                android:src="@drawable/icon_emoji"
                />
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Aniket Shah"
                android:visibility="invisible"
                android:textSize="@dimen/_20font_ssp"
                app:layout_constraintTop_toBottomOf="@id/profile_Pic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_50hsdp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/_14hsdp"
                />
            <TextView
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_50hsdp"
                app:layout_constraintTop_toBottomOf="@id/profile_username"
                android:layout_marginTop="@dimen/_5hsdp"
                android:textSize="@dimen/_13font_ssp"
                android:text="User Info"
                android:maxLines="5"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/userGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_50hsdp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/userInfo"
                android:layout_marginTop="@dimen/_5hsdp"
                android:textSize="@dimen/_13font_ssp"
                android:text="Male"
                android:maxLines="5"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_50hsdp"
                app:layout_constraintTop_toBottomOf="@id/userGender"
                android:layout_marginTop="@dimen/_5hsdp"
                android:textSize="@dimen/_13font_ssp"
                android:text="location"
                android:maxLines="5"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/relationShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_50hsdp"
                app:layout_constraintTop_toBottomOf="@id/location"
                android:layout_marginTop="@dimen/_5hsdp"
                android:textSize="@dimen/_13font_ssp"
                android:text="Realtionship"
                android:maxLines="5"
                android:ellipsize="end"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/profile_username"
                app:layout_constraintTop_toBottomOf="@id/profile_Pic"
                android:layout_marginStart="@dimen/_60hsdp"
                android:backgroundTint="@color/blue_theme"
                app:fabSize="normal"
                android:src="@drawable/baseline_edit_24"
                app:tint="@android:color/white"
                android:contentDescription="edit button"
                />
            <LinearLayout
                android:id="@+id/profile_linearLayout1"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_55hsdp"
                app:layout_constraintTop_toBottomOf="@id/relationShip"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10hsdp"
                >
                <ImageView
                    android:id="@+id/follow"
                    android:layout_width="@dimen/_30hsdp"
                    android:layout_height="@dimen/_30hsdp"
                    android:src="@drawable/baseline_person_add_alt_1_24"
                    android:background="@drawable/circle_shape_bg"
                    android:backgroundTint="@color/blue_theme"
                    android:padding="@dimen/_4hsdp"/>
                <ImageView

                    android:id="@+id/message"
                    android:layout_marginStart="@dimen/_55hsdp"
                    android:layout_width="@dimen/_30hsdp"
                    android:layout_height="@dimen/_30hsdp"
                    android:src="@drawable/baseline_comment_24"
                    android:background="@drawable/circle_shape_bg"
                    android:backgroundTint="@color/blue_theme"
                    android:padding="@dimen/_4hsdp"/>

                <ImageView
                    android:id="@+id/userLink"
                    android:layout_marginStart="@dimen/_50hsdp"
                    android:layout_width="@dimen/_30hsdp"
                    android:layout_height="@dimen/_30hsdp"
                    android:src="@drawable/baseline_link_24"
                    android:rotation="30"
                    android:background="@drawable/circle_shape_bg"
                    android:backgroundTint="@color/blue_theme"
                    android:padding="@dimen/_4hsdp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/profile_linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_linearLayout1"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15hsdp"
                android:layout_marginStart="@dimen/_20hsdp"
                android:layout_marginEnd="@dimen/_20hsdp"
                android:background="@drawable/round_border_shape"
                android:padding="@dimen/_5hsdp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_12hsdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/followers"
                        android:textSize="@dimen/_12font_ssp"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/followersValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"
                        android:textSize="@dimen/_15font_ssp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1hsdp"
                    android:layout_height="@dimen/_50hsdp"
                    android:background="@color/gray"
                    android:layout_marginStart="@dimen/_12hsdp"
                    android:layout_marginEnd="@dimen/_12hsdp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/following"
                        android:textSize="@dimen/_12font_ssp"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="567"
                        android:id="@+id/followingValue"
                        android:textSize="@dimen/_15font_ssp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1hsdp"
                    android:layout_height="@dimen/_50hsdp"
                    android:background="@color/gray"
                    android:layout_marginStart="@dimen/_12hsdp"
                    android:layout_marginEnd="@dimen/_12hsdp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_12hsdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work"
                        android:textSize="@dimen/_12font_ssp"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/workValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver"
                        android:textSize="@dimen/_15font_ssp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/bio"
                android:layout_marginTop="@dimen/_8hsdp"
                android:padding="@dimen/_5hsdp"
                android:layout_marginStart="@dimen/_30hsdp"
                android:layout_marginEnd="@dimen/_30hsdp"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A friend in need is a friend indeed"
                app:layout_constraintTop_toBottomOf="@id/profile_linearLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_15font_ssp"
                android:textColor="@color/text_inactive"
                />
            <TextView
                android:id="@+id/followingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/following"
                app:layout_constraintTop_toBottomOf="@id/bio"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="sans-serif-black"
                android:visibility="invisible"
                android:textSize="@dimen/_18font_ssp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_20hsdp"
                android:layout_marginTop="@dimen/_10hsdp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:contentDescription="recyclerView for following"
                android:id="@+id/recyclerView_Following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/followingText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_8hsdp"
                android:layout_marginBottom="@dimen/_20hsdp"
                android:layout_marginStart="@dimen/_20hsdp"
                tools:listitem="@layout/item_following"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26hsdp"
                android:visibility="gone"
                android:id="@+id/progressBarFollowing"
                app:layout_constraintTop_toBottomOf="@id/followingText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45hsdp"
                android:visibility="gone"
                android:id="@+id/progressBar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="@dimen/_250hsdp"
                app:layout_constraintBottom_toTopOf="@id/followingText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <include
                android:id="@+id/errorPage"
                layout="@layout/error_page"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/followingText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/_250hsdp"
                android:layout_width="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>