<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10hsdp"
        >

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/_40hsdp"
            android:layout_height="@dimen/_40hsdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_7hsdp"
            android:src="@drawable/outline_person_outline_24"
            android:padding="@dimen/_6hsdp"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="@dimen/_160hsdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10hsdp"
            android:text="Aniket "
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/_16font_ssp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@+id/profilePic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recentMessage"
            android:layout_width="@dimen/_160hsdp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/_12font_ssp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/gray"
            android:ellipsize="end"
            android:paddingEnd="@dimen/_15hsdp"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/username"
            android:text="Just now working on calendar"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="@dimen/_50hsdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10hsdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="21-11-2002"
            android:maxLines="1"
            android:visibility="gone"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/chat_notify"
            android:layout_width="@dimen/_20hsdp"
            android:layout_height="@dimen/_20hsdp"
            android:layout_marginStart="@dimen/_10hsdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date"
            android:text="1"
            android:textAlignment="center"
            android:paddingStart="@dimen/_2hsdp"
            android:paddingEnd="@dimen/_2hsdp"
            android:visibility="gone"
            android:paddingTop="@dimen/_4hsdp"
            android:textSize="@dimen/_10font_ssp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="@dimen/_2hsdp"
            android:background="@drawable/circle_shape_bg"
            android:backgroundTint="@color/blue_theme"
            app:tint="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>