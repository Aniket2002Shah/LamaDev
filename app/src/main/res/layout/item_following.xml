<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/followingImg"
        android:layout_width="@dimen/_45hsdp"
        android:layout_height="@dimen/_45hsdp"
        android:layout_marginEnd="@dimen/_12font_ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ProgressBar
        android:layout_width="@dimen/_25hsdp"
        android:layout_height="@dimen/_25hsdp"
        android:visibility="gone"
        android:id="@+id/progressBarFollowing"
        app:layout_constraintTop_toTopOf="@id/followingImg"
        app:layout_constraintBottom_toBottomOf="@id/followingImg"
        app:layout_constraintEnd_toEndOf="@id/followingImg"
        app:layout_constraintStart_toStartOf="@id/followingImg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>