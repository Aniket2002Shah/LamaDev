<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45hsdp"
           android:visibility="gone"
            android:id="@+id/progressBarPost"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/_40hsdp"
            android:layout_height="@dimen/_40hsdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_60hsdp"
            android:layout_marginStart="@dimen/_7hsdp"
            android:src="@drawable/outline_person_outline_24"
            android:padding="@dimen/_2hsdp"
            />

        <EditText
            android:id="@+id/title_EditText"
            android:layout_width="@dimen/_220hsdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10hsdp"
            android:layout_marginTop="@dimen/_60hsdp"
            android:padding="@dimen/_9hsdp"
           android:hint="Enter a title"
            android:background="@drawable/round_border_fill_shape"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:paddingStart="@dimen/_20hsdp"
            android:textSize="@dimen/_15font_ssp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linear_Layout1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_23hsdp"
            android:layout_marginTop="@dimen/_10hsdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_3hsdp"
            android:paddingBottom="@dimen/_3hsdp"
            android:paddingTop="0dp"
            android:paddingEnd="@dimen/_2hsdp"
            android:background="@drawable/round_border_shape"
            app:layout_constraintStart_toStartOf="@id/title_EditText"
            app:layout_constraintTop_toBottomOf="@id/title_EditText">
        <TextView
            android:id="@+id/postCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:padding="@dimen/_2hsdp"
            android:text="Type"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_2hsdp"
                android:paddingStart="0dp"
                android:layout_marginTop="@dimen/_2hsdp"
                android:src="@drawable/baseline_arrow_drop_down_24"
                app:tint="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_Layout2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_23hsdp"
            android:layout_marginTop="@dimen/_10hsdp"
            android:layout_marginStart="@dimen/_90hsdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_3hsdp"
            android:paddingBottom="@dimen/_3hsdp"
            android:paddingTop="0dp"
            android:paddingEnd="@dimen/_2hsdp"
            android:background="@drawable/round_border_shape"
            app:layout_constraintStart_toEndOf="@id/linear_Layout1"
            app:layout_constraintTop_toBottomOf="@id/title_EditText">
            <TextView
                android:id="@+id/postType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:padding="@dimen/_2hsdp"
                android:text="Public"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_2hsdp"
                android:paddingStart="0dp"
                android:layout_marginTop="@dimen/_2hsdp"
                android:src="@drawable/baseline_arrow_drop_down_24"
                app:tint="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/postLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_180hsdp"
            android:padding="@dimen/_5hsdp"
            android:layout_margin="@dimen/_10hsdp"
            app:layout_constraintTop_toBottomOf="@id/linear_Layout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:background="@drawable/round_border_shape"
            >
        <EditText
            android:id="@+id/post_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_50hsdp"
            android:background="@android:color/transparent"
            android:hint="What's new ?"
            android:padding="@dimen/_5hsdp"
            android:gravity="top"
            />
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/imageListRecyclerView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:listitem="@layout/post_load_img"
              android:orientation="horizontal"
              android:contentDescription="images list for post"
              />
        </LinearLayout>
        <Button
            android:id="@+id/postBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postLayout"
            android:text="Post"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_15hsdp"
            android:layout_marginStart="@dimen/_60hsdp"
            android:layout_marginEnd="@dimen/_60hsdp"
            android:textSize="@dimen/_13hsdp"
            android:backgroundTint="@color/blue_theme"
            />


        <TableLayout
            android:id="@+id/tableLyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/postBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_10hsdp"
            android:layout_marginEnd="@dimen/_10hsdp"
            android:layout_marginBottom="@dimen/_10hsdp"
            android:layout_marginTop="@dimen/_25hsdp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/tableRow1"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <include
                    android:id="@+id/Camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_marginTop="@dimen/_8hsdp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tableRow1"
               >
                <include
                    android:id="@+id/Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Go_Live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_8hsdp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tableRow2"
               >
                <include
                    android:id="@+id/Audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Gif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_8hsdp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tableRow3"
               >
                <include
                    android:id="@+id/Template"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
                <include
                    android:id="@+id/Theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_add_post_icon"
                    />
            </TableRow>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>